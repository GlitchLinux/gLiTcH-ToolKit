#!/bin/bash

# ULTIMATE COLOR PALETTE ðŸŽ¨
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
MAGENTA='\033[0;35m'
CYAN='\033[0;36m'
WHITE='\033[1;37m'
PINK='\033[1;35m'
BOLD='\033[1m'
DIM='\033[2m'
ITALIC='\033[3m'
UNDERLINE='\033[4m'
BLINK='\033[5m'
REVERSE='\033[7m'
STRIKETHROUGH='\033[9m'

# GRADIENT COLORS ðŸŒˆ
BRIGHT_RED='\033[1;31m'
BRIGHT_GREEN='\033[1;32m'
BRIGHT_YELLOW='\033[1;33m'
BRIGHT_BLUE='\033[1;34m'
BRIGHT_MAGENTA='\033[1;35m'
BRIGHT_CYAN='\033[1;36m'

# BACKGROUND COLORS ðŸŽ­
BG_RED='\033[41m'
BG_GREEN='\033[42m'
BG_YELLOW='\033[43m'
BG_BLUE='\033[44m'
BG_MAGENTA='\033[45m'
BG_CYAN='\033[46m'
BG_WHITE='\033[47m'

NC='\033[0m' # No Color

# EPIC FUNCTIONS ðŸš€
rainbow_text() {
    local text="$1"
    local colors=("$BRIGHT_RED" "$BRIGHT_YELLOW" "$BRIGHT_GREEN" "$BRIGHT_CYAN" "$BRIGHT_BLUE" "$BRIGHT_MAGENTA")
    local result=""
    for (( i=0; i<${#text}; i++ )); do
        local color_index=$((i % 6))
        result+="${colors[$color_index]}${text:$i:1}"
    done
    echo -e "$result$NC"
}

typewriter_effect() {
    local text="$1"
    local color="$2"
    for (( i=0; i<${#text}; i++ )); do
        echo -ne "${color}${text:$i:1}${NC}"
        sleep 0.05
    done
    echo ""
}

loading_bar() {
    local duration=$1
    local message="$2"
    local color="$3"
    echo -ne "${color}${message} ${NC}"
    for i in {1..20}; do
        echo -ne "${BRIGHT_CYAN}â–ˆ${NC}"
        sleep $(echo "scale=2; $duration/20" | bc)
    done
    echo -e " ${GREEN}âœ“${NC}"
}

# CLEAR SCREEN AND START THE SHOW!
clear
rm -rf /tmp/FastCat
cd /tmp

#echo "â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”"              
#typewriter_effect " WELCOME TO FASTCAT AUTOCONFIGURATORâ›› â”‚"                          
#typewriter_effect "  THEMING UTILITY FOR FASTFETCH CLI â›› â”‚"                              
#echo "â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜" 
echo -e "${GREEN}         â‹    â‹ "
echo -e "${GREEN}        /ÊŒ)__/ÊŒ) ${CYAN}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${NC}"                              
echo -e "${GREEN}        /  	  \ ${PINK}â›› F-A-S-T-C-A-T â›› âŸ¹ CLI to autoconfigure fastfetch themes in seconds${NC}"
echo -e "${GREEN}        â• (Î˜) (Î˜) â• ${PINK}TAKE NOTICE - RUNNING as ROOT theme will only be applied for superuser${NC}"
echo -e "${GREEN}      _â‹° â‰½v--vâ‰¼ ï¾‰ ${PINK}REQUIREMENTS - PACKAGES unzip & fastfetch, if missing the script fail${NC}"
echo -e "${GREEN}    /ã€€		  | ${CYAN}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${NC}"  		 
echo -e "${GREEN}   / 		      â”‚"   
typewriter_effect "( ã€€ ãƒ½     Y   ï¾‰  â”‚ WELCOME TO FASTCAT AUTOCONFIGURATORV â”‚" "$BRIGHT_GREEN"                            
typewriter_effect "_ï¾‰ã€€ ã€€|    |   |  â”‚ THEMING UTILITY FOR FASTFETCH CLIVV â”‚" "$BRIGHT_GREEN"                             
echo -e "${GREEN} /  ____ï¾‰    â•   | "      
echo -e "${GREEN}( (___â•­=â•®(m)m)m)m)â”€â”€â”€â”€â”€â”€â”€âŸ¹"
echo -e "${PINK}  ï¼¼____/ â›› F A S T C A T â››"
echo -e "${BRIGHT_CYAN}${BOLD}Initializing FastCat in ${NC}"
for i in {5..1}; do
    echo -ne "${BRIGHT_GREEN}${BOLD}${i}${NC} "
    sleep 1
done
echo -e "${BRIGHT_GREEN}${BOLD} EXECUTING FASTCATS ${NC}"
echo ""
echo -e "${BRIGHT_BLUE}${BOLD}â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”${NC}"
echo -e "${BRIGHT_BLUE}${BOLD}â”‚${NC} ${BRIGHT_CYAN}Cloning FastCat git repo to /tmp${NC} ${BRIGHT_BLUE}${BOLD}â”‚${NC}"
echo -e "${BRIGHT_BLUE}${BOLD}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${NC}"
echo -e "${BLUE}Cloning FastCat git repo to /tmp -->${NC}"
git clone --depth 1 https://github.com/m3tozz/FastCat.git && cd FastCat && bash ./fastcat.sh --shell
