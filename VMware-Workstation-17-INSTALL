#!/bin/bash

# Script to install VMware Workstation 17 from split ZIPs (GitHub repo)

# Exit on any error
set -e

# Clone the repository (if not already present)
REPO_DIR="/tmp/WMware-Workstation-17"
if [ ! -d "$REPO_DIR" ]; then
    echo "üîπ Cloning repository..."
    git clone https://github.com/GlitchLinux/WMware-Workstation-17.git "$REPO_DIR"
else
    echo "üîπ Repository already exists. Skipping clone."
fi

cd "$REPO_DIR" || exit 1

# Combine split ZIPs
OUTPUT_ZIP="VMware-Workstation-Full-17.0.0-x86_64.zip"
if [ ! -f "$OUTPUT_ZIP" ]; then
    echo "üîπ Combining split ZIP files..."
    cat VMware-Workstation-Full-17.0.0-x86_64.zip.00[1-6] > "$OUTPUT_ZIP"
else
    echo "üîπ Combined ZIP already exists. Skipping."
fi

# Verify ZIP integrity
echo "üîπ Verifying ZIP integrity..."
if ! unzip -t "$OUTPUT_ZIP" >/dev/null 2>&1; then
    echo "‚ùå Error: ZIP file is corrupted!"
    exit 1
fi

# Unzip the bundle
echo "üîπ Extracting VMware bundle..."
unzip -o "$OUTPUT_ZIP"

# Install dependencies
echo "üîπ Updating system and installing dependencies..."
sudo apt-get update -y
sudo apt-get dist-upgrade -y
sudo apt-get install -y linux-headers-$(uname -r)

# Install VMware Workstation
BUNDLE_FILE=$(find . -name "VMware-Workstation-Full-*.bundle" | head -n 1)
if [ -z "$BUNDLE_FILE" ]; then
    echo "‚ùå Error: VMware bundle not found!"
    exit 1
fi

echo "üîπ Installing VMware Workstation..."
chmod +x "$BUNDLE_FILE"
sudo "$BUNDLE_FILE"

# Copy license key (if exists)
LICENSE_FILE="key.txt"
if [ -f "$LICENSE_FILE" ]; then
    echo "üîπ Copying license key to home directory..."
    cp "$LICENSE_FILE" ~/
    echo "‚úÖ License key copied to: ~/$LICENSE_FILE"
else
    echo "‚ö†Ô∏è No license key found in ZIP."
fi

# Start VMware
echo "‚úÖ Installation complete! Launching VMware in 5 seconds..."
sleep 5
vmware
